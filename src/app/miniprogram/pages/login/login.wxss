/* miniprogram/pages/login/login.wxss */
page{
}
.container{
  margin-top: 15%;
  background-color: var(--page-background);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 30rpx 15rpx;
}

.input-section{
  margin-bottom: 44rpx;
  width: 80%;
  max-width: 800rpx;
  min-width: 550rpx;
}

.input-section .cell-text{
  margin-left: 12rpx;
  font-weight: 500;
  font-size: 34rpx;
  color: var(--text-black-2);
  letter-spacing: -0.42rpx;
  margin-bottom: 14rpx;
}

.input-section .cell-input{
  height: 60rpx;
  background: var(--color-black-10);
  border-radius: 9px;
  outline-style: none;
  padding: 0 20rpx;
  font-size: 36rpx;
  color: var(--text-black-2);
  letter-spacing: 1.08px;
  font-weight: 650;
  height: 92rpx;

  transition: all 0.25s;
}

.input-section .cell-input:focus{
  background: var(--text-black-1);

}
.bind-button{
  margin-top: 110rpx;

  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  letter-spacing: -0.22px;
  text-align: center;
  user-select: none;
  transition: all 0.3s;
  font-weight: 650;
  background: var(--color-pink-2);
  border-radius: 11px;
}

.bind-button:active{
  background-color: var(--color-pink-3);
}

.headline{
  display: inline-block;
  font-size: 46rpx;
  color: var(--text-black-2);
  letter-spacing: -0.59rpx;
  font-weight: 650;
  z-index: 10;
  margin-bottom: 16rpx;
}

.headline .decoration-bar{

  width: auto;
  height: 18rpx;
  background-color: var(--color-pink-2);
  z-index: 1;
  margin-top: -20rpx;
}
.header-text{
  margin-left: 12rpx;
  /* margin-bottom: 82rpx; */
  margin-bottom: 13%;
  color: var(--text-black-3);
}