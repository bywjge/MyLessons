/* miniprogram/index/index.wxss */

page{
  background-color: var(--page-welcome-background);
}

.logo{
  margin-top: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.logo .image{
  height: 280rpx;
  width: 280rpx;
  margin: 0px auto;
}

.logo .text{
  margin-top: 80rpx;
  width: 300rpx;
  height: 100rpx;
}

.button{
  margin-top: 30rpx;

  padding: 20rpx 30rpx;

  background: var(--button-background);
  border: 1px solid rgba(255, 255, 255, .7);
  border-radius: 11px;
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #FFFFFF;
  letter-spacing: -0.22px;
  text-align: center;

  transition: all 0.3s;
}

.button:active{
  background: var(--button-tap-background);
}

.button.auth{
  position: absolute;
  min-width: 500rpx;
  width: 80%;
  bottom: 20%;
}