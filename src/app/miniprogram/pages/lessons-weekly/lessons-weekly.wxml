<view class="container" data-color-scheme="light">
  <view class="lesson-viewer" wx:if="{{showViewer}}">
    <view class="viewer-title">课程预览</view>
    <view>
      balabal
    </view>
  </view>
  <!-- <navigation /> -->
  <!-- 日期选择器 -->
  <view class="selector-wrapper"  data-blur-filter="{{showViewer}}">
    <!-- 周次选择按钮 -->
    <picker 
      class="week-selector" 
      mode="selector" 
      range="{{pickerArray}}" 
      value="{{selectWeek - 1}}" 
      bindchange="selectWeek"
      header-text="选择周次"
    >
      <view class="month">{{nowMonth}}</view>
      <view class="week">{{selectWeek}}周</view>
    </picker>
    <!-- 日期查看器 -->
    <view class="day-viewer">
      <view 
        class="item"
        wx:for="{{days}}"
        wx:for-item="day"
        wx:key="day"
        data-status="{{day.status}}"
      >
        <view class="date">{{day.date}}</view>
        <view class="week">{{day.week}}</view>
      </view>
    </view>
  </view>
  <scroll-view 
    bounces="true"
    scroll-y="{{!showViewer}}" 
    style="height: calc(100% - 130rpx)"
    scroll-top="{{scrollTop}}"
  >
    <view class="lesson-wrapper" data-blur-filter="{{showViewer}}">
      <!-- 课程节数指示器 -->
      <view class="indexer-wrapper">
        <view 
          class="item"
          wx:for="{{indexer}}"
          wx:for-item="e"
          wx:key="e"
        >
          <view 
            class="index"
            data-underway="{{~~e.from[0] === nowIndex}}"
          >
          {{e.from[0]}}
          {{e.to[0]}}

          </view>
          <view class="from">
            {{e.from[1]}}
          </view>
          <view class="to">
            {{e.to[1]}}
          </view>
        </view>
      </view>

      <!-- 课程区域 -->
      <view class="day-lesson-wrapper">
        <view 
          class="strip"
          wx:for="{{lessons}}"
          wx:for-item="day"
          wx:key="day"
        >
          <view 
            class="{{e === null? 'empty-item': 'item'}}"
            data-connect="{{e !== null && ((~~e['节次'][1] - ~~e['节次'][0]) > 1)}}"
            data-status="{{e !== null && e['日期'] === nowDate && ~~e['节次'][0] == nowIndex ? 'underway' : 'normal'}}"
            wx:for="{{day}}"
            wx:for-item="e"
            wx:key="e"
          >
            <view class="name">{{e['课程名称']}}</view>
            <view wx:if="{{e !== null}}" class="bottom" style="background-color: {{e['卡片颜色']}}">
              <view wx:if="{{e['编号'] !== ''}} "class="number">{{e['编号']}}</view>
              <view class="location">{{e['地点']}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>

</view>