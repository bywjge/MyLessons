page {
  background-color: var(--page-background);
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.selector-wrapper{
  background-color: var(--item-background);
  height: 176rpx;
  width: calc(100% - 46rpx * 2);
  display: flex;
  flex-direction: column;
  box-shadow: 0 2px 4px 0 var(--shadow-10);
  padding: 23rpx 46rpx;
}

.selector-wrapper .date-week-viewer{
  font-size: 37rpx;
  line-height: 50rpx;
  font-weight: 500;
  color: var(--text-black-1);
  letter-spacing: -0.22px;
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}

.selector-wrapper .date-selector{
  /* height: 120rpx; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.date-selector .date-button{
  height: 102rpx; min-height: 102rpx;
  width: 102rpx; min-width: 102rpx;
  border-radius: 51rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0rpx 18rpx;

  transition: all 0.1s;
}
.date-selector .date-button.selected {
  background-color: var(--color-pink-2);
  color: var(--color-white);
}
.date-selector .date-button {
  /* background-color: var(--color-white); */
  color: var(--text-black-1);
}

.date-button .day{
  font-family: "Avenir";
  font-weight: 650;
  font-size: 46rpx;
  line-height: 60rpx;
  letter-spacing: -0.28px;
  margin-top: -5rpx;
}

.date-button .day-of-week{
  font-weight: 500;
  font-size: 23rpx;
  line-height: 20rpx;
  letter-spacing: -0.28px;
}

.lesson-container{
  /* height: 100%; */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0px 0px 0px;
}

/* 无课程 */
.empty-lesson{
  position: absolute;
  top: 50%;
  font-size: 38rpx;
  color: var(--text-black-3);
}

/* 课程数量统计器 */
.lesson-counter{
  /* font-family: "Avenir"; */
  position: relative;
  font-weight: Bold;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;
  /* letter-spacing: 0.89x`rpx; */
  align-self: flex-start;
  padding-left: 67rpx;
  padding-right: 67rpx;
  margin-bottom: 20rpx;
  color: var(--text-black-3);
}

.lesson-counter.pass-lesson:after {
  content: '';
  position: absolute;
  height: 2px;
  width: 480rpx;
  right: 46rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: var(--color-black-10);
}