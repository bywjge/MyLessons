.about-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
  color: var(--text-black-2);
}

.name{
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.version{
  display: flex;
  align-items: center;
  content: '当前版本: ';
  font-size: 23rpx;
  font-weight: 500;
}

.version .text{
  margin-left: 15rpx;
  padding: 0rpx 15rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  background-color: var(--color-black-10);
}


.paragraph {
  width: 75%;
  margin: 0 auto;
  font-size: 28rpx;
  line-height: 52rpx;
  color: var(--text-black-2);
  padding-bottom: 100rpx;
}

.paragraph .text {
  margin-left: 20rpx;
  margin-top: 15rpx;
}

.paragraph .title {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 48rpx;
  color: var(--color-pink-1);
  margin-top: 60rpx;
}

.paragraph .sponsors {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.paragraph .sponsors image{
  --size: 70rpx;
  height: var(--size);
  width: var(--size);
  border-radius: 50%;
  margin: 8rpx;
}