page {
  --avator-size: 120rpx;

  --button-icon-size: 30rpx;
  --button-column-gap: 32rpx;

  overflow: hidden;

  --border-radius: 28rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  scroll-behavior: smooth;
}

.container .navigation-bar {
  top: 0;
  position: fixed;
}

.container > .content {
  top: var(--navigation-bar-height);
  /* width: 90%; */
  /* 不然box-shadow会被截断 */
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 0 8%;
  padding-top: calc(60rpx + 150rpx);
  padding-bottom: 50rpx;
  flex: 1;
  overflow: scroll;
}

.button-tap {
  box-shadow: 0 4rpx 26rpx 0 var(--shadow-20) !important;
}

.content > .head {
  position: fixed;
  top: calc(60rpx + 150rpx);
  width: calc(100% - 16%);
  box-sizing: border-box;
  background-color: var(--card-background);
  box-shadow: 0 4rpx 28rpx 0 var(--shadow-10);
  border-radius: var(--border-radius);
  padding: 24rpx 30rpx;
  transition: box-shadow .3s, transform .2s, opacity .2s;
  z-index: 10;

  border: solid 1px var(--border-optional);
}

/* 卡片展开时 */
.content > .head.expand {
  --padding: 4%;
  width: calc(100% - var(--padding) * 2);
  left: var(--padding);
  box-shadow: 0 4rpx 34rpx 2rpx var(--shadow-20);
}

/* 隐藏个人中心 */
.content > .head.hidden {
  transform: translateY(-50rpx);
  opacity: 0;
}

.content > .head.expand .top .avatar {
  --size: 96rpx;
  height: var(--size);
  width: var(--size);
  border-radius: 100%;
}

.content > .head.expand .float-right {
  transform: rotate(180deg);
}

.content > .head.expand .info {
  opacity: 1;
  height: auto;
  margin-top: 40rpx;
  transform: translateY(0);
}

.content > .empty-hint {
  text-align: center;
  color: var(--text-black-3);
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 50rpx;
}

.avatar {
  --size: 70rpx;
  height: var(--size);
  width: var(--size);
  border-radius: 100%;
  transition: all .3s;
}

/* 个人中心顶部 */
.head .top {
  display: flex;
  align-items: center;
}

.head .top .name {
  color: var(--text-black-2);
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 25rpx;
  flex: 1;
  /* width: 200rpx; */
  overflow: hidden;
  word-break: break-all;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.float-right {
  right: 30rpx;
  color: var(--text-black-3);
  transition: transform .3s ease;
}

.head .info {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 0rpx;
  opacity: 0;
  height: 0;
  transform: translateY(-100%);
  transition: all .3s;
}

.head .info > .divider {
  height: 70rpx;
  width: 2rpx;
  margin: 0 -30rpx;
  background: var(--color-black-07);
}

.head .info > .item > .text {
  font-size: 40rpx;
  font-weight: 500;
  color: var(--text-black-2);
  text-align: center;
}

.head .info > .item > .description {
  font-size: 24rpx;
  color: var(--text-black-4);
  margin-top: 5rpx;
  text-align: center;
  word-wrap:inherit;
}


/* 评论卡片 */
.post-card {
  display: flex;
  flex-direction: column;
  background-color: var(--card-background);
  box-shadow: 0 4rpx 28rpx 0 var(--shadow-10);
  border-radius: var(--border-radius);
  padding: 20rpx 30rpx;
}

.post-card:not(:last-child) {
  margin-bottom: 40rpx;
}
.post-card .head { 
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.post-card .head .text {
  flex: 1;
  margin-left: 20rpx;
  
  /* 修正视觉偏差 */
  margin-bottom: -4rpx;
} 

.post-card .head .text .name {
  font-size: 28rpx;
  line-height: 30rpx;
  font-weight: 400;
  color: var(--text-black-2);
}

.post-card .head .text .subtitle {
  font-size: 20rpx;
  line-height: 20rpx;
  margin-top: 10rpx;
  color: var(--text-black-4);
}

/* 底部操作栏 */
.post-card .bottom-operation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 80%;
  margin-top: 30rpx;
  align-self: center;
  font-size: 26rpx;
  font-weight: 400;
  color: var(--text-black-3);
  line-height: 60rpx;
}

.post-card .bottom-operation view.active {
  color: var(--color-pink-1);
}

.post-card .bottom-operation view.active.icon:before {
  background: var(--color-pink-1);
}

/* 评论的正文 */
.post-card .content {
  margin-top: 20rpx;
  font-size: 28rpx;
}

/* tag标签 */
.post-card .content .tag-wrapper {
  display: flex;
  align-items: center;
  line-height: 50rpx;
  flex-wrap: wrap;
}

.post-card .content .tag-wrapper .tag {
  color: var(--color-pink-1);
  margin-right: 10rpx;
}

/* 文字内容 */
.post-card .content .text {
  flex: 1;
  line-height: 44rpx;
  color: var(--text-black-2);
  text-align: justify;
  margin-right: 10rpx;
}

.post-card .content .image-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}


.post-card .content .image-wrapper image {
  margin-top: 10rpx;
}

.post-card .content .image-wrapper.double-column image {
  --size: 280rpx;
  width: var(--size);
  height: var(--size);
}

.post-card .content .image-wrapper.tripple-column image {
  --size: 185rpx;
  width: var(--size);
  height: var(--size);
}

/* 带图标的按钮 */
.icon-plain-button {
  position: relative;
  padding: 0rpx 0rpx 0rpx calc(16rpx + var(--button-icon-size));
}

.icon-button-tap {
  box-shadow: 0 0 26rpx 0 var(--shadow-20);
}

/* 单行文字的按钮 */
.icon-plain-button {
  text-align: center;
  max-height: 60rpx;
}

.icon-plain-button.icon:before {
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  content: '';
  position: absolute;
  width: var(--button-icon-size);
  height: var(--button-icon-size);
  mask-size: var(--button-icon-size) var(--button-icon-size);
  -webkit-mask-size: var(--button-icon-size) var(--button-icon-size);
  background: var(--text-black-3);
}

.icon-agree:before {
  mask-image: var(--icon-agree);
  -webkit-mask-image: var(--icon-agree);
  transform: translateY(-60%) !important;
}

.icon-disagree:before {
  mask-image: var(--icon-disagree);
  -webkit-mask-image: var(--icon-disagree);
}
.icon-comment:before {
  mask-image: var(--icon-comment);
  -webkit-mask-image: var(--icon-comment);
}

.add-post {
  --size: 90rpx;
  position: fixed;
  right: 8%;
  bottom: 5%;
  width: var(--size);
  height: var(--size);
  border-radius: 50%;
  border: solid 1px var(--border-optional);
  background: var(--color-pink-2);
  box-shadow: 0 2px 7px 1px var(--shadow-20);
  transition: box-shadow .2s, transform .1s .2s, opacity .1s .2s;
}

.add-post.hidden {
  transform: translateY(-60rpx);
  opacity: 0;
}

.add-post-tap {
  box-shadow: 0 2px 12px 2px var(--shadow-30);
}

.add-post:before {
  --size: 34rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  content: '';
  position: absolute;
  background: white;
  mask-image: var(--icon-plus);
  -webkit-mask-image: var(--icon-plus);
  width: var(--size);
  height: var(--size);
  mask-size: var(--size) var(--size);
  -webkit-mask-size: var(--size) var(--size);
}