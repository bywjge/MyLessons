page{
  background-color: #f7f7f7;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.view-container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.view-container > .item{
  height: 100%;
  width: 100%;
}

/* 切换周/日视图 */
.operation-btn{
  display: flex;
  align-items: center;
  height: 32px;
  border: solid 1rpx var(--color-white-50);
  border-radius: 50px;
  /* background-color: var(--item-background); */
  text-align: center;
  font-size: 29rpx;
  padding: 0rpx 25rpx;
  box-sizing: border-box;

  transition: all 0.1s;
}
@media (prefers-color-scheme: light) {
  .operation-btn {
    color: var(--text-black-2);
    background-color: var(--color-white-70);
  }
}
@media (prefers-color-scheme: dark) {
  .operation-btn {
    color: var(--text-black-2);
    background-color: var(--item-background) !important;
  }
}

.operation-btn-tap{
  padding: 0rpx 32rpx;
}