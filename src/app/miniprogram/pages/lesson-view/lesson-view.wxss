page{
  background-color: #f7f7f7;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.view-container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.view-container > .item{
  height: 100%;
  width: 100%;
}

/* 切换周/日视图 */
.operation-btn{
  display: flex;
  align-items: center;
  height: 32px;
  border: solid 1rpx white;
  border-radius: 50px;
  color: black;
  background-color: rgba(255, 255, 255, 0.7);
  text-align: center;
  font-size: 29rpx;
  padding: 0rpx 25rpx;
  box-sizing: border-box;

  transition: all 0.1s;
}

.operation-btn:active{
  background-color: rgba(255, 255, 255, 0.5);
  padding: 0rpx 35rpx;
}